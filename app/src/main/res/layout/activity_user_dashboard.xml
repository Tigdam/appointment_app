<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_dashboard"
    android:background="@drawable/userdashboardback"
    >

    <TextView
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="338dp"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        android:gravity="right"
        android:layout_centerInParent="true"
        android:text="@string/logoutbtn"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="220dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/user_name"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pat_profile_pic"
        android:layout_width="136dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/ellipse_2"
        android:layout_centerInParent="true"
        android:elevation="4dp"
        android:src="@drawable/naruto" />


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_2"
        android:elevation="6dp"/>


    <TextView
        android:id="@+id/visits_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="270dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/visits"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="270dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/appointmentdate"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:layout_centerInParent="true"
        android:text="@string/user_name"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_visits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="305dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/user_view_visit"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_visits2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="304dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/user_timing"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_ap_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="185dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="304dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/user_visit_date"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bookappointment"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="391dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/bookappountment"
        android:textAppearance="@style/button"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bookappointment2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_below="@+id/bookappointment"
        android:layout_centerInParent="true"
        android:layout_marginTop="37dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:text="@string/chatwithdoc"
        android:textAppearance="@style/button"
        android:textStyle="bold" />

    <Button
        android:id="@+id/historybtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_below="@+id/bookappointment2"
        android:layout_centerInParent="true"
        android:layout_marginTop="37dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:text="@string/historybtn"
        android:textAppearance="@style/button"
        android:textStyle="bold" />

</RelativeLayout>