<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_dashboard"
    android:background="@drawable/userdashboardback"
    >



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ellipse_2"
        android:layout_width="136dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/ellipse_2"
        android:elevation="4dp"
        android:src="@drawable/naruto" />


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="319dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="436dp"
        android:background="@drawable/rectangle_2"
        android:elevation="6dp"/>


    <TextView
        android:id="@+id/visits_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="217dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/visits"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="217dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/appointmentdate"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_visits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="247dp"
        android:elevation="6dp"
        android:gravity="center_horizontal|top"
        android:text="@string/user_view_visit"
        android:textAppearance="@style/in_rect_elevation"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bookappointment"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="387dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:text="@string/bookappountment"
        android:textAppearance="@style/button"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bookappointment2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_below="@+id/bookappointment"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:text="@string/chatwithdoc"
        android:textAppearance="@style/button"
        android:textStyle="bold" />

    <Button
        android:id="@+id/historybtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_below="@+id/bookappointment2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:text="@string/historybtn"
        android:textAppearance="@style/button"
        android:textStyle="bold" />

</RelativeLayout>