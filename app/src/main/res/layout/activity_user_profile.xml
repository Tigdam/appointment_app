                    android:gravity="top"
                    android:text="@string/any_medical"
                    android:textAppearance="@style/any_medical" />

                <EditText
                    android:id="@+id/any_medical"
                    android:layout_width="328dp"
                    android:layout_height="56dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
