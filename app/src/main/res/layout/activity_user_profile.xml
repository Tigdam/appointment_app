                    android:layout_width="94dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="380dp"
                    android:gravity="top"
